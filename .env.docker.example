# Docker Environment Configuration for Lattice
# Copy this file to .env and update with your actual WorkOS credentials

# Required WorkOS credentials
WORKOS_API_KEY=your_workos_api_key_here
WORKOS_CLIENT_ID=your_workos_client_id_here

# Optional configuration (defaults provided)
WORKOS_REDIRECT_URI=http://localhost:8000/auth/callback
WORKOS_COOKIE_PASSWORD=your_secure_cookie_password_here

# Application settings
DEBUG=false

# Instructions:
# 1. Get your WorkOS credentials from https://dashboard.workos.com/
# 2. Replace the placeholder values above with your actual credentials
# 3. Generate a secure cookie password: openssl rand -base64 32
# 4. Update the redirect URI if deploying to a different domain
# 5. Run: docker-compose up -d
