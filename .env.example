#################################
## Backend Environment Variables
#################################
# Auth Provider (WorkOS)
AUTH_API_KEY=your_auth_api_key_here
AUTH_CLIENT_ID=your_auth_client_id_here

# Optional Configuration
BASE_URL=http://localhost:8000
DEBUG=false
AUTH_REDIRECT_URI=http://localhost:8000/api/v1/auth/callback
AUTH_COOKIE_PASSWORD=y0jN-wF1bIUoSwdKT6yWIHS5qLI4Kfq5TnqIANOxEXM=

# Cookie security
COOKIE_SECURE=false
COOKIE_SAMESITE=lax  # lax | none | strict (none requires COOKIE_SECURE=true)

# CSRF protection (double-submit cookie, applies to session-auth only)
CSRF_ENABLED=false

# CORS configuration
# Comma-separated list of allowed origins. You may provide bare hosts or full origins; bare hosts
# are coerced to http(s) based on COOKIE_SECURE.
# Example: CORS_ALLOW_ORIGINS=app.example.com,https://console.example.com
CORS_ALLOW_ORIGINS=
# Optional allowed request headers and exposed response headers (CSV)
CORS_ALLOW_HEADERS=
CORS_EXPOSE_HEADERS=

# Frontend URL (used for default CORS and redirects)
FRONTEND_URL=http://localhost:3000


START_SSH_PROXY_SERVER=true


## Frontend Environment Variables
#################################
# Example configurations:
# Development (separate frontend/backend): VITE_API_URL=http://localhost:8000/api/v1
# Production (unified): VITE_API_URL=/api/v1 (or leave blank)

VITE_API_URL=/api/v1

# WebSocket policy
# Allow connections with missing Origin (for native/WebView clients). Default false.
WS_ALLOW_NULL_ORIGIN=false

# If running behind a proxy/ingress, ensure CORS_ALLOW_ORIGINS matches the external origin
# (scheme/host/port), not the internal service URL. Proxies may translate HTTPS externally to HTTP
# upstream; browsers will still send Origin: https://..., so allow-list must include https://...
